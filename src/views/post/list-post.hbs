<div id="container">
<section id="bai-dang">
	{{#each this.posts}}
	<div id="row">
					<img src="{{avatar}}" class="img-title">
					<div id="text">
						<a href="#" id="bai-dang-text">{{title}}</a>
						<div id="date">{{formatDate date}}
							{{#each ../this.categories}} 
								{{#ifEquals ../category ID}}
									<a href="#" id="mytag">{{category}}</a>  
								{{/ifEquals}}				 
							{{/each}}				
						</div>
						<p>{{summary}}</p>
					</div>
				</div>
	{{/each}}


	
</section>
	<div class="text center">
		<button id="btnLoadMore">LOAD MORE</button>	
	</div>
<script>
	let soTrang = 1;
	let current = parseInt({{posts.length}});
	let temp = parseInt({{posts.length}});
	let total = parseInt({{total}});

	$(document).ready(function(){

		$(document).on("click","#btnLoadMore",function(){
				soTrang += 1;
				$.ajax({
					async: false,
					type: 'GET',
					url: "./list-post/page/"+soTrang,
					success: function(res){
						$('#bai-dang').append(res);
						
					},
					error: function(xhr,ajaxOption,thrownError){
						alert("Fail");
					}
				})
				current += temp;
			if(current >= total)
				{
					$('#btnLoadMore').css("visibility","hidden")
				}
			})
				
	})
	
</script>

</div>