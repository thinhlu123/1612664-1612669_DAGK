		<div id="container" class="card shadow">
			<h4 class="card-header">
        Categories
      </h4>
			<br>
		
      <p id="add-prd"><a href="add-post.html"><span>Thêm Catalog</span></a></p>
      <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Category</th>
        <th scope="col">Group</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success" href="/admin/add-category" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Category
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categories}}
      <tr>
        <th scope="row" class="text-center">{{ID}}</th>
        <td>{{category}}</td>
        <td>{{group}}</td>
        <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/admin/edit-category/{{ID}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
