	<script>
		    jQuery(function(){
    		var counter = $("#prds").find("tr").length
    		jQuery('#add-button').click(function(event){
        		event.preventDefault();
       			var newRow = jQuery('<tr><td><span>' + counter + '</span></td><td class="l5">' + $('#add-input').val() + '</td><td><span>Hoạt động</span></td><td><span><button class="btn-success btn-action">Thêm</button><button class="btn-info btn-action">Chỉnh sửa</button><button class="btn-danger btn-action">Xóa</button></span></td></tr>');
        jQuery('#prds').append(newRow);
        counter++;
        document.getElementById("add-input").value = "";
    });
});
	</script>
