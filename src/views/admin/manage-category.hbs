
{{#section 'css'}}
	<title>Quản lý category</title>
	<link rel="stylesheet" type="text/css" href="/css/admin_quanly.css">
{{/section}}
    {{#ifEquals authUser.type 1}}
		<header id="header">
      <div id="container">
  
        <nav class="navbar navbar-expand-lg">
      
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          <div id="papername">dogenews</div>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
              &nbsp &nbsp &nbsp &nbsp
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                  <li class="nav-item active"><a class="nav-link" href="/admin/manage-post">Bài đăng</span></a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-user">Tài khoản</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-category">Category <span class="sr-only">(current)</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-groupcategory">Group Category</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-tag">Tag</a></li>       
                </ul>
              </div>
                  <div>
                    <a href="#" data-toggle="dropdown"><i class="fa fa-user-circle" style="font-size:36px"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right" role="menu">
                      <div class="col-lg-12"> 
                          <form action="/auth/logout" id="frmLogOut" method="POST"></form>
                      <!-- Thông tin người dùng
                      -->
                        {{#ifEquals authUser.type 1}}
							<a class="dropdown-item" href="/admin/manage-user">Admin</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 2}}
							<a class="dropdown-item" href="/auth/edit-information">User</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 3}}
							<a class="dropdown-item" href="/admin/manage-user">Writer</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 4}}
							<a class="dropdown-item" href="/editor/editor">Editor</a>
							{{/ifEquals}}
							<a class="dropdown-item" href="javascript: $('#frmLogOut').submit();">Log out</a>
                     
                      
                    
                    
                    
                    
                      </div>
                    </ul>   
                  </div>
            </nav>
        </div>
    </header>
		
		<div id="container" class="card shadow">
			<h4 class="card-header">
        Categories
      </h4>
			<br>
		
      <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Category</th>
        <th scope="col">Group</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success" href="/admin/add-category" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Category
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categories}}
      <tr>
        <th scope="row" class="text-center">{{ID}}</th>
        <td>{{category}}</td>
        <td>{{groupname}}</td>
        <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/admin/edit-category/{{ID}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
	</div>

	</div>

	{{#section 'js'}}
  <script>
		    jQuery(function(){
    		var counter = $("#prds").find("tr").length
    		jQuery('#add-button').click(function(event){
        		event.preventDefault();
       			var newRow = jQuery('<tr><td><span>' + counter + '</span></td><td class="l5">' + $('#add-input').val() + '</td><td><span>Hoạt động</span></td><td><span><button class="btn-success btn-action">Thêm</button><button class="btn-info btn-action">Chỉnh sửa</button><button class="btn-danger btn-action">Xóa</button></span></td></tr>');
        jQuery('#prds').append(newRow);
        counter++;
        document.getElementById("add-input").value = "";
    });
});
	</script>
{{/section}}

{{else}}
  {{#section 'js'}}
  <script>
    window.location.href="/404";

  </script>
    
  {{/section}}

{{/ifEquals}}