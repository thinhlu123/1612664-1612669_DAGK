		<div class="card shadow">
  <h4 class="card-header">
    Edit Tag
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid tagId. <a href="/admin/manage-tag" class="alert-link">Go back</a>.
    </div>
    {{else}}
    <form method="POST" action="/admin/update-tag">
      <div class="form-group col-lg-5">
        <label for="txtTagID" style="font-weight: bold">#</label>
        <input readonly type="text" class="form-control" id="txtTagID" name="TagID" value="{{this.tag.ID}}">
      </div>
      <div class="form-group col-lg-5">
        <label for="txtTagName" style="font-weight: bold">Tag</label>
        <input type="text" class="form-control" id="txtTagName" name="TagName" autofocus
          placeholder="Enter tag name" value="{{this.tag.tagname}}">
      </div>
      <a class="btn btn-outline-primary" href="/admin/manage-tag" role="button" style="margin-left: 120px;">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-outline-danger" formaction="/admin/delete-tag">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
    {{/if}}
  </div>
</div>
