		<div id="container" class="card shadow">
			<h4 class="card-header">
				Quản lý người dùng
      		</h4>
			<table class="table table-hover">
    			<thead>
      				<tr>
        				<th scope="col" class="text-center">Username</th>
						<th scope="col">Họ tên</th>
						<th scope="col">Biệt danh</th>
						<th scope="col">Email</th>
						<th scope="col">Ngày sinh</th>
						<th scope="col">Chức vụ</th>
						<th scope="col">Hạn Premium</th>
						<th scope="col">Chuyên mục</th>
        				<th scope="col" class="text-right">
          					<a class="btn btn-outline-success" href="/admin/add-user" role="button">
            					<i class="fa fa-plus" aria-hidden="true"></i>
            					Add User
          					</a>
        				</th>
      				</tr>
    			</thead>
    			<tbody>
      			{{#each this.accounts}}
      				<tr>
        				<th scope="row" class="text-center">{{username}}</th>
							<td>{{fullname}}</td>
							<td>{{nickname}}</td>
							<td>{{email}}</td>
							<td>{{formatDate birthday}}</td>
							<td>{{atype}}</td>
							<td>{{formatDate premiumdate}}</td>
							<td>
								{{#each ../this.categories}}
									{{#ifEquals ../category ID}}
										{{category}}
									{{/ifEquals}}
								{{/each}}
							</td>
        					<td class="text-right" scope="row">
								{{#ifEquals atype "editor"}}
								<a class="btn btn-outline-primary" href="/admin/manage-editor/{{username}}" role="button">
            						<i class="fa fa-pencil" aria-hidden="true"></i>
          						</a>
								{{/ifEquals}}
								{{#ifEquals atype "user"}}
								<a class="btn btn-outline-primary" href="/admin/add-premium/{{username}}" role="button">
            						<i class="fa fa-calendar" aria-hidden="true"></i>
          						</a>
								{{/ifEquals}}
          						<a class="btn btn-outline-danger" href="/admin/delete-user/{{username}}" role="button">
        							<i class="fa fa-trash-o" aria-hidden="true"></i>
      							</a>
        					</td>
      				</tr>
      			{{/each}}
    			</tbody>
  			</table>

        	
