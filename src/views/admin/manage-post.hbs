{{#ifEquals authUser.type 1}}
{{#section 'css'}}
	<title>Quản lý post</title>
	<link rel="stylesheet" type="text/css" href="/css/admin_quanly.css">
{{/section}}
		<header id="header">
      <div id="container">
  
        <nav class="navbar navbar-expand-lg">
      
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          <div id="papername">dogenews</div>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
              &nbsp &nbsp &nbsp &nbsp
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                  <li class="nav-item active"><a class="nav-link" href="/admin/manage-post">Post <span class="sr-only">(current)</span></a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-user">Account</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-category">Category</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-groupcategory">Group</a></li>
                  <li class="nav-item"><a class="nav-link" href="/admin/manage-tag">Tag</a></li>       
                </ul>
              </div>
                  <div>
                    <a href="#" data-toggle="dropdown"><i class="fa fa-user-circle" style="font-size:36px"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right" role="menu">
                      <div class="col-lg-12"> 
                         <form action="/auth/logout" id="frmLogOut" method="POST"></form>
                      {{#ifEquals authUser.type 1}}
							<a class="dropdown-item" href="/admin/manage-user">Quản lý thông tin</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 2}}
							<a class="dropdown-item" href="/auth/edit-information/{{authUser.ID}}">Cập nhật thông tin</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 3}}
							<a class="dropdown-item" href="/auth/edit-information/{{authUser.ID}}">Cập nhật thông tin</a>
							<a class="dropdown-item" href="/admin/add-post">Đăng bài mới</a>
							{{/ifEquals}}
							{{#ifEquals authUser.type 4}}
							<a class="dropdown-item" href="/auth/edit-information/{{authUser.ID}}">Cập nhật thông tin</a>
							<a class="dropdown-item" href="/editor/editor">Duyệt bài viết</a>
							{{/ifEquals}}
							<a class="dropdown-item" href="javascript: $('#frmLogOut').submit();">Log out</a>
                      
                    
                      </div>
                    </ul>   
                  </div>
            </nav>
        </div>
    </header>
		

    <div id="container" class="card shadow">
			<h4 class="card-header">
        Post
      </h4>
			<br>
		
      <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Tên bài viết</th>
        <th scope="col">Danh mục</th>
        <th scope="col">Link</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success" href="/admin/add-post" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm bài viết
          </a>
          <a class="btn btn-outline-success" href="/admin/wait-post" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Bài viết chờ duyệt
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.posts}}
      <tr>
        <th scope="row" class="text-center">{{ID}}</th>
        <td>{{title}}</td>
        <td>
          {{#each ../this.categories}}
            {{#ifEquals ../category ID}}
              {{category}}
            {{/ifEquals}}
          {{/each}}
        </td>
        <td><a href="/post/post-detail/{{ID}}" style="color: #7c0000">Link</a></td>
        <td class="text-right">
          <a class="btn btn-outline-primary" href="/admin/edit-post/{{ID}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
	</div>


	</div>
{{else}}
  {{#section 'js'}}
  <script>
    window.location.href="/404";

  </script>
    
  {{/section}}

{{/ifEquals}}