<script>
	function typeChanged(obj)
{
    var value = obj.value;
    if (value == 4){
		$('#lblCat').show();
        $('#IDCat').show();
    }
    else {
		$('#lblCat').hide();
		$('#IDCat').hide();
	}
}
</script>
